@using Mobile_ecommerce.Areas.Admin.Model
@model LoginCheck

@{
    ViewBag.Title = "Login";
    Layout = null;
}
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Asset/Admin/css/login.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Asset/Admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
          integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div class="login-box">
        <h2>Quản trị viên</h2>
        @using (Html.BeginForm("Check", "Login", FormMethod.Post))
        {
                <div class="user-box">
                    @Html.TextBoxFor(model => model.UserName)
                    <label>Tên tài khoản</label>
                </div>
                <div class="user-box">
                    @Html.PasswordFor(model => model.PassWord)
                    <label>Mật khẩu</label>
                </div>
                <div class="d-flex align-items-center justify-content-center">
                    <button type="submit" class="btn-lg">
                        Đăng nhập
                    </button>
                </div>
                <div class="text-center"> @Html.ValidationMessage("CustomError", new { @class = "text-center text-danger" })</div>            
        }
    </div>
</body>



