@using Mobile_ecommerce.Common;
@using Mobile_ecommerce.Areas.Admin.Model;

@{
    var userLogin = (AdminLogin)Session[CommonConstants.ADMIN_SESSION];
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Asset/Admin/css/sb-admin-2.min.css" rel="stylesheet" />
    <link href="~/Asset/Admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <link href="~/Asset/Admin/css/adminlayout.css" rel="stylesheet" />
</head>
<body>
    <div id="wrapper">
        <ul class="navbar-nav bg-gradient-dark sidebar sidebar-dark accordion" id="accordionSidebar">
            <li class="nav-item">
                <a class="sidebar-brand d-flex align-items-center justify-content-center" href="@Url.Action("Index","AdminHome")">
                    <div class="sidebar-brand-icon">
                        <i class="fa fa-th-list"></i>
                    </div>
                    <div class="sidebar-brand-text mx-3">Admin</div>
                </a>
            </li>
            <li class="nav-item">
                <div class="sidebar-heading text-gray-400 text-bg-danger pt-2 pe-2 pb-2">
                    Quản lý tài khoản
                </div>
            </li>
            <li class="nav-item">
                <div class="d-flex align-items-center ps-2">
                    <i class="fa fa-users" style="color: #fff;"></i>
                    <a class="nav-link text-light" href="@Url.Action("Index", "User")">Tài khoản</a>
                </div>
            </li>
            <li class="nav-item">
                <div class="sidebar-heading text-gray-400 text-bg-danger pt-2 pe-2 pb-2">
                    Quản lý khách hàng
                </div>
            </li>
            <li class="nav-item">
                <div class="d-flex align-items-center ps-2">
                    <i class="fa fa-user-circle" style="color: #fff;"></i>
                    <a class="nav-link text-light" href="@Url.Action("Index", "Customer")">Khách hàng</a>
                </div>
            </li>
            <li class="nav-item">
                <div class="sidebar-heading text-gray-400 text-bg-danger pt-2 pe-2 pb-2">
                    Quản lý sản phẩm
                </div>
            </li>
            <li class="nav-item">
                <div class="d-flex align-items-center ps-2">
                    <i class="fa fa-pen-nib" style="color: #fff;"></i>
                    <a class="nav-link text-light collapsed" href="#" data-toggle="collapse"
                       data-target="#collapsePages">
                        Danh mục
                    </a>
                </div>
                <div id="collapsePages" class="collapse" aria-labelledby="headingPages" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Loại ĐT</h6>
                        <a class="collapse-item" href="@Url.Action("Index", "Categories")">Danh sách loại</a>
                        <a class="collapse-item" href="@Url.Action("Create", "Categories")">Thêm mới loại</a>
                        <div class="collapse-divider"></div>
                        <h6 class="collapse-header">Điện thoại</h6>
                        <a class="collapse-item" href="@Url.Action("Index", "Products")">Danh sách điện thoại</a>
                    </div>
                </div>
            </li>
            <li class="nav-item">
                <div class="sidebar-heading text-gray-400 text-bg-danger pt-2 pe-2 pb-2">
                    Quản lý mã khuyến mãi
                </div>
            </li>
            <li class="nav-item">
                <div class="d-flex align-items-center ps-2">
                    <i class="fa fa-bookmark" style="color: #fff;"></i>
                    <a class="nav-link text-light" href="@Url.Action("Index", "Voucher")">Khuyến mãi</a>
                </div>
            </li>
            <li class="nav-item">
                <div class="sidebar-heading text-gray-400 text-bg-danger pt-2 pe-2 pb-2">
                    Quản lý đơn phản hồi
                </div>
            </li>
            <li class="nav-item">
                <div class="d-flex align-items-center ps-2">
                    <i class="fa fa-clipboard-check" style="color: #fff;"></i>
                    <a class="nav-link text-light" href="">Phản hồi</a>
                </div>
            </li>
            <li class="nav-item">
                <div class="sidebar-heading text-gray-400 text-bg-danger pt-2 pe-2 pb-2">
                    Quản lý hóa đơn
                </div>
            </li>
            <li class="nav-item">
                <div class="d-flex align-items-center ps-2">
                    <i class="fa fa-chalkboard" style="color: #fff;"></i>
                    <a class="nav-link text-light" href="">Đơn hàng</a>
                </div>
            </li>
        </ul>
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">
                @if (TempData["AlertMessage"] != null)
                {
                    <div id="msgAlert" class="alert @TempData["AlertType"]" role="alert">
                        @TempData["AlertMessage"]
                    </div>
                }
                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                    <ul class="list-unstyled topnav-menu float-right mb-0 navbar-nav ml-auto ">

                        <li class="d-none d-sm-block">
                            <form class="app-search">
                                <div class="app-search-box">
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="Search...">
                                        <div class="input-group-append">
                                            <button class="btn btn-primary" type="submit">
                                                <i class=" fa fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </li>

                        @if (Session[CommonConstants.ADMIN_SESSION] != null)
                        {
                            <li class="dropdown notification-list">
                                <a class="nav-link dropdown-toggle nav-user mr-0 waves-effect waves-light" data-toggle="dropdown" href="#" role="button" aria-haspopup="false" aria-expanded="false">
                                    <span class="pro-user-name ml-1">
                                        Chào @userLogin.Name <i class="mdi mdi-chevron-down"></i>
                                    </span>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right profile-dropdown ">
                                    <!-- item-->
                                    <div class="dropdown-header noti-title">
                                        <h6 class="text-overflow m-0 text-center">@userLogin.Role</h6>
                                    </div>

                                    <div class="dropdown-divider"></div>

                                    <!-- item-->
                                    <a href="@Url.Action("LogOut", "Login")" class="dropdown-item notify-item">
                                        <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                        Đăng xuất                                       
                                    </a>

                                </div>
                            </li>
                        }
                    </ul>

                </nav>


                <div id="content-wrapper">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Asset/Admin/js/script.js"></script>
    <script src="~/Asset/Admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Asset/Admin/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/Asset/Admin/js/sb-admin-2.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
